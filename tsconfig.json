{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@copywriting/*": ["src/content/copywriting/*"],
			"@humanizing/*": ["src/content/humanizing/*"],
			"@lib-types/*": ["src/types/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/__tests__/**", "**/*.test.*"]
}
